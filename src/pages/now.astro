---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import NavPill from '../components/NavPill.astro';

// Get the latest now entry from the collection
const allNowPosts = await getCollection('now', ({ data }) => !data.draft);
const sortedPosts = allNowPosts.sort((a, b) =>
  b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);
const latestPost = sortedPosts[0];

// Render the markdown content
const { Content } = await latestPost.render();

// Format date in UTC for consistency
const lastUpdated = latestPost.data.publishedAt.toLocaleDateString('en-US', {
  timeZone: 'UTC', // Force UTC
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title="Now" description="What I'm currently focused on.">
  <NavPill />
  <div class="container">
    <article class="now">
      <header class="now__header">
        <h1 class="now__title">Now</h1>
        <p class="now__updated" title="Date shown in UTC">
          Last updated: {lastUpdated}
        </p>
      </header>

      <div class="now__content">
        <Content />
      </div>

      <footer class="now__footer">
        <a href="/now/archive" class="now__archive-link">
          View past "now" entries &rarr;
        </a>
      </footer>
    </article>
  </div>
</BaseLayout>

<style>
  .now {
    max-width: 60ch;
    margin: 0 auto;
    padding-bottom: 80px; /* Space for floating nav */
  }

  .now__header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: var(--border-thick) solid var(--color-gold-dim);
  }

  .now__title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    color: var(--color-gold);
    margin-bottom: var(--space-sm);
    text-shadow:
      0 0 30px rgba(255, 229, 44, 0.4),
      0 0 60px rgba(255, 229, 44, 0.2);
  }

  .now__updated {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    background: var(--color-black);
    color: var(--color-gold);
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
  }

  .now__content {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  .now__content p {
    margin-bottom: var(--space-lg);
  }

  .now__content p:last-child {
    margin-bottom: 0;
  }

  .now__footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-xl);
    border-top: var(--border-thin) dashed var(--color-border);
  }

  .now__note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .now__note a {
    color: var(--color-gold-orange);
    text-decoration: underline;
    text-decoration-color: var(--color-gold);
  }

  .now__note a:hover {
    color: var(--color-gold-deep);
  }

  .now__archive-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    margin-top: var(--space-lg);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-label);
    color: var(--color-gold);
    transition: color var(--transition-fast);
  }

  .now__archive-link:hover {
    color: var(--color-gold-orange);
  }
</style>
