---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import NavPill from '../../components/NavPill.astro';
import TagList from '../../components/TagList.astro';
import EmblemCard from '../../components/EmblemCard.astro';
import { hasMinimalContent } from '../../utils/content';

export async function getStaticPaths() {
  const entries = await getCollection('media', ({ data }) => !data.draft && data.isFavorite);
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    timeZone: 'UTC',
  });
};

// Only use explicit updatedAt from frontmatter
const updatedAt = entry.data.updatedAt;

// Check if entry has substantial content
const hasContent = !hasMinimalContent(entry.body);
---

<BaseLayout title={entry.data.title} description={`Favorite: ${entry.data.title}`}>
  <NavPill />

  <article class="favorite-detail">
    <div class="favorite-detail__container">
      <header class="favorite-detail__header p3r-animate">
        <a href="/favorites" class="favorite-detail__back">
          ‚Üê Back to Favorites
        </a>

        {entry.data.emblem && (
          <div class="favorite-detail__emblem p3r-animate" style="--stagger-delay: 50ms;">
            <EmblemCard emblemSrc={entry.data.emblem} isInitiallyFlipped={true} />
          </div>
        )}

        <h1 class="favorite-detail__title p3r-animate" style="--stagger-delay: 100ms;">
          {entry.data.title}
        </h1>

        <div class="favorite-detail__meta p3r-animate" style="--stagger-delay: 150ms;">
          <span class="favorite-detail__type">
            {entry.data.content_type}
          </span>

          {entry.data.tags.length > 0 && (
            <div class="favorite-detail__tags">
              <TagList tags={entry.data.tags} size="md" />
            </div>
          )}

          <div class="favorite-detail__dates">
            {entry.data.publishedAt && (
              <div class="meta-date-item">
                <span class="meta-date-label">Added</span>
                <span class="meta-date-value">{formatDate(entry.data.publishedAt)}</span>
              </div>
            )}
            {updatedAt && entry.data.publishedAt && updatedAt > entry.data.publishedAt && (
              <div class="meta-date-item">
                <span class="meta-date-label">Updated</span>
                <span class="meta-date-value">{formatDate(updatedAt)}</span>
              </div>
            )}
          </div>
        </div>
      </header>

      {hasContent && (
        <div class="favorite-detail__content p3r-animate" style="--stagger-delay: 200ms;">
          <div class="prose">
            <Content />
          </div>
        </div>
      )}

      {entry.data.collections.length > 0 && (
        <footer class="favorite-detail__collections p3r-animate" style="--stagger-delay: 250ms;">
          <h3>Collections</h3>
          <div class="collection-tags">
            {entry.data.collections.map(collection => (
              <span class="collection-tag">{collection}</span>
            ))}
          </div>
        </footer>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .favorite-detail {
    min-height: 100vh;
    padding: var(--space-2xl) var(--space-md);
  }

  .favorite-detail__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .favorite-detail__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    color: var(--color-gold);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: var(--tracking-label);
    margin-bottom: var(--space-xl);
    transition: all var(--transition-fast);
  }

  .favorite-detail__back:hover {
    color: var(--color-gold-bright);
    transform: translateX(-4px);
  }

  .favorite-detail__emblem {
    max-width: 240px;
    margin: 0 auto var(--space-xl);
  }

  .favorite-detail__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: var(--border-medium) solid var(--color-border);
  }

  .favorite-detail__title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--color-text);
    text-transform: uppercase;
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }

  .favorite-detail__meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .favorite-detail__type {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-label);
    color: var(--color-gold-dim);
    padding: var(--space-xs) var(--space-md);
    background: var(--color-bg-elevated);
    border: var(--border-thin) solid var(--color-gold-dim);
    border-radius: var(--radius-sm);
  }

  .favorite-detail__tags {
    display: flex;
    justify-content: center;
  }

  .favorite-detail__dates {
    display: flex;
    gap: var(--space-lg);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .meta-date-item {
    display: flex;
    gap: var(--space-xs);
    align-items: baseline;
  }

  .meta-date-label {
    opacity: 0.7;
  }

  .meta-date-value {
    color: var(--color-text);
  }

  .favorite-detail__content {
    margin-bottom: var(--space-2xl);
  }

  .favorite-detail__collections {
    padding-top: var(--space-xl);
    border-top: var(--border-thin) solid var(--color-border);
  }

  .favorite-detail__collections h3 {
    font-family: var(--font-display);
    font-size: var(--text-md);
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-label);
    margin-bottom: var(--space-md);
  }

  .collection-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .collection-tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-elevated);
    border: var(--border-hairline) solid var(--color-border);
    border-radius: var(--radius-sm);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .favorite-detail {
      padding: var(--space-xl) var(--space-sm);
    }

    .favorite-detail__title {
      font-size: var(--text-xl);
    }

    .favorite-detail__dates {
      flex-direction: column;
      gap: var(--space-xs);
      align-items: center;
    }
  }
</style>
