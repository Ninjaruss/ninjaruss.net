---
import BaseLayout from './BaseLayout.astro';
import NavPill from '../components/NavPill.astro';
import MediaLightbox from '../components/MediaLightbox.astro';

interface Props {
  title: string;
  description: string;
  section: string;
  initialSlug?: string;
}

const { title, description, section, initialSlug } = Astro.props;
const hasInitialContent = Astro.slots.has('detail');
---

<BaseLayout title={title} description={description}>
  <NavPill />
  <div
    class:list={['split-view', { 'has-selection': hasInitialContent }]}
    data-section={section}
    data-initial-slug={initialSlug}
    transition:persist={`split-view-${section}`}
  >
    <!-- Left Panel: List -->
    <aside class="split-view__list">
      <header class="split-view__header">
        <h1 class="split-view__title">{title}</h1>
      </header>
      <nav class="split-view__nav" role="list">
        <slot name="list" />
      </nav>
    </aside>

    <!-- Right Panel: Detail -->
    <main class="split-view__detail">
      <div class="split-view__detail-inner">
        <button class="split-view__back" type="button" aria-label="Back to list">
          <span class="split-view__back-arrow">←</span>
          <span class="split-view__back-text">Back to list</span>
        </button>
        <div class="split-view__placeholder">
          <div class="split-view__placeholder-content">
            <span class="split-view__placeholder-icon">→</span>
            <p class="split-view__placeholder-title">Select an item to view details</p>
          </div>
        </div>
        <article class:list={['split-view__content', { 'is-active': hasInitialContent }]} aria-live="polite">
          {hasInitialContent ? <slot name="detail" /> : null}
        </article>
      </div>
    </main>
  </div>
  <MediaLightbox />
</BaseLayout>

<style>
  .split-view {
    display: grid;
    grid-template-columns: 320px 1fr;
    min-height: calc(100vh - var(--space-lg) * 2);
    gap: 0;
  }

  /* Left Panel */
  .split-view__list {
    background: var(--color-bg-elevated);
    border-right: var(--border-thick) solid var(--color-gold-dim);
    display: flex;
    flex-direction: column;
    height: calc(100vh - var(--space-lg) * 2);
    position: sticky;
    top: var(--space-sm);
  }

  .split-view__header {
    padding: var(--space-lg) var(--space-md);
    border-bottom: var(--border-medium) solid var(--color-gold);
    background: var(--color-gold);
  }

  .split-view__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--color-black);
    text-transform: uppercase;
    margin-bottom: 0;
    line-height: 1.3;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }


  .split-view__nav {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-sm) 0;
  }

  /* Right Panel */
  .split-view__detail {
    background: var(--color-bg-base);
    padding: var(--space-xl) var(--space-2xl);
    padding-bottom: calc(var(--space-3xl) + 80px);
    overflow-y: auto;
  }

  .split-view__detail-inner {
    /* No max-width - let entry layout handle its own constraints */
  }

  /* Entry content within split view */
  .split-view__content .entry {
    padding-bottom: 0;
    max-width: 720px;
  }

  .split-view__content .container {
    padding: 0;
    max-width: none;
  }

  /* Thumbnail gallery under title (frontmatter images) */
  .split-view__content .entry__thumbnails {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    margin-top: var(--space-lg);
  }

  .split-view__content .entry__thumbnail {
    width: auto;
    max-width: 180px;
    max-height: 140px;
    height: auto;
    border-radius: var(--radius-sm);
    border: var(--border-medium) solid var(--color-border-strong);
    cursor: pointer;
    transition: transform var(--transition-fast), border-color var(--transition-fast), box-shadow var(--transition-fast);
    object-fit: cover;
  }

  .split-view__content .entry__thumbnail:hover {
    transform: scale(1.02);
    border-color: var(--color-gold);
    box-shadow: var(--shadow-hard-sm);
  }

  /* Single thumbnail takes more space */
  .split-view__content .entry__thumbnails:has(.entry__thumbnail:only-child) .entry__thumbnail {
    max-width: 280px;
    max-height: 200px;
  }

  /* Inline media in markdown prose - consistent sizing */
  .split-view__content .prose img,
  .split-view__content .prose video {
    display: block;
    width: 100%;
    max-width: 560px;
    height: auto;
    margin: var(--space-xl) 0;
    border-radius: var(--radius-md);
    border: var(--border-medium) solid var(--color-border-strong);
    cursor: pointer;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .split-view__content .prose img:hover,
  .split-view__content .prose video:hover {
    border-color: var(--color-gold-dim);
    box-shadow: var(--shadow-hard-sm);
  }

  /* Video-specific styling */
  .split-view__content .prose video {
    background: var(--color-bg-elevated);
  }

  /* Smaller inline images (use ![alt](src){.small} in markdown) */
  .split-view__content .prose img.small {
    max-width: 320px;
  }

  /* Full-width images */
  .split-view__content .prose img.full {
    max-width: 100%;
  }

  .split-view__content .entry__header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
  }

  .split-view__content .entry__title {
    font-size: var(--text-2xl);
  }

  .split-view__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    color: var(--color-text-muted);
    text-align: center;
  }

  .split-view__placeholder-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
    max-width: 50ch;
  }

  .split-view__placeholder-icon {
    font-size: var(--text-4xl);
    opacity: 0.3;
  }

  .split-view__placeholder-title {
    font-size: var(--text-lg);
  }


  .split-view__content {
    display: none;
  }

  .split-view__content.is-active {
    display: block;
    animation: p3r-entrance 400ms cubic-bezier(0.16, 1, 0.3, 1) backwards;
  }

  .split-view.has-selection .split-view__placeholder {
    display: none;
  }

  /* Back button (mobile only) */
  .split-view__back {
    display: none;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-black);
    color: var(--color-gold);
    border: none;
    padding: var(--space-sm) var(--space-md);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-sm);
    cursor: pointer;
    margin-bottom: var(--space-lg);
    transition: background-color var(--transition-fast);
  }

  .split-view__back:hover {
    background: var(--color-bg-surface);
  }

  .split-view__back-arrow {
    font-size: var(--text-lg);
  }

  .split-view.has-selection .split-view__back {
    display: inline-flex;
  }

  /* Mobile: Stack layout */
  @media (max-width: 900px) {
    .split-view {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .split-view__list {
      position: relative;
      height: auto;
      max-height: none;
      border-right: none;
      border-bottom: var(--border-thick) solid var(--color-gold-dim);
    }

    .split-view__nav {
      max-height: 50vh;
    }

    .split-view__detail {
      min-height: 60vh;
    }

    .split-view.has-selection .split-view__list {
      display: none;
    }

    .split-view.has-selection .split-view__detail {
      min-height: calc(100vh - var(--space-lg) * 2);
    }
  }
</style>

<script>
  // Initialize click handlers for lightbox on all images
  function initMediaLightbox() {
    // Header thumbnails (frontmatter images)
    const thumbnails = document.querySelectorAll('.entry__thumbnail[data-lightbox-src]');
    thumbnails.forEach((thumb) => {
      if ((thumb as HTMLElement).dataset.lightboxInit === 'true') return;
      (thumb as HTMLElement).dataset.lightboxInit = 'true';

      thumb.addEventListener('click', () => {
        const src = (thumb as HTMLElement).dataset.lightboxSrc;
        const alt = (thumb as HTMLElement).dataset.lightboxAlt || '';
        if (src && window.openMediaLightbox) {
          window.openMediaLightbox(src, alt, 'image');
        }
      });
    });

    // Inline images in prose content
    const proseImages = document.querySelectorAll('.split-view__content .prose img');
    proseImages.forEach((img) => {
      if ((img as HTMLElement).dataset.lightboxInit === 'true') return;
      (img as HTMLElement).dataset.lightboxInit = 'true';

      img.addEventListener('click', () => {
        const src = (img as HTMLImageElement).src;
        const alt = (img as HTMLImageElement).alt || '';
        if (src && window.openMediaLightbox) {
          window.openMediaLightbox(src, alt, 'image');
        }
      });
    });

    // Inline videos in prose content
    const proseVideos = document.querySelectorAll('.split-view__content .prose video');
    proseVideos.forEach((video) => {
      if ((video as HTMLElement).dataset.lightboxInit === 'true') return;
      (video as HTMLElement).dataset.lightboxInit = 'true';

      video.addEventListener('click', () => {
        const src = (video as HTMLVideoElement).src ||
                    (video as HTMLVideoElement).querySelector('source')?.src || '';
        if (src && window.openMediaLightbox) {
          window.openMediaLightbox(src, '', 'video');
        }
      });
    });
  }

  document.addEventListener('astro:page-load', () => {
    const splitView = document.querySelector('.split-view') as HTMLElement;
    if (!splitView) return;

    // Skip if already initialized (for persisted elements)
    if (splitView.dataset.initialized === 'true') return;
    splitView.dataset.initialized = 'true';

    const listItems = splitView.querySelectorAll('.list-item');
    const contentArea = splitView.querySelector('.split-view__content') as HTMLElement;
    const backButton = splitView.querySelector('.split-view__back') as HTMLButtonElement;
    const section = splitView.dataset.section;
    const initialSlug = splitView.dataset.initialSlug;

    let currentSlug: string | null = initialSlug || null;

    // Initialize lightbox handlers for pre-rendered content
    initMediaLightbox();

    // If there's pre-rendered content, mark the corresponding list item as active
    if (initialSlug) {
      const activeItem = splitView.querySelector(`[data-slug="${initialSlug}"]`);
      if (activeItem) {
        activeItem.classList.add('is-active');
      }
    }

    // Back button handler
    backButton?.addEventListener('click', () => {
      splitView.classList.remove('has-selection');
      contentArea.classList.remove('is-active');
      contentArea.innerHTML = '';
      listItems.forEach(i => i.classList.remove('is-active'));
      window.location.href = `/${section}/`;
      currentSlug = null;
    });

    listItems.forEach((item) => {
      item.addEventListener('click', async (e) => {
        e.preventDefault();

        const link = item as HTMLAnchorElement;
        const slug = link.dataset.slug;

        if (!slug || slug === currentSlug) return;

        // Update active state
        listItems.forEach(i => i.classList.remove('is-active'));
        item.classList.add('is-active');

        // Show loading state
        splitView.classList.add('has-selection', 'is-loading');
        contentArea.classList.remove('is-active');

        try {
          // Fetch the detail page
          const response = await fetch(`/${section}/${slug}/`);
          const html = await response.text();

          // Parse and extract content
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          const entryContent = doc.querySelector('.entry');

          if (entryContent) {
            contentArea.innerHTML = entryContent.outerHTML;
            contentArea.classList.add('is-active');

            // Update URL without reload
            history.pushState({ slug }, '', `/${section}/${slug}/`);
            currentSlug = slug;

            // Re-initialize lightbox handlers for new content
            setTimeout(() => {
              initMediaLightbox();
            }, 50);
          }
        } catch (error) {
          console.error('Failed to load content:', error);
          // Fallback: navigate normally
          window.location.href = link.href;
        } finally {
          splitView.classList.remove('is-loading');
        }
      });
    });

    // Handle browser back/forward
    window.addEventListener('popstate', (e) => {
      if (e.state?.slug) {
        const item = splitView.querySelector(`[data-slug="${e.state.slug}"]`);
        if (item) {
          (item as HTMLElement).click();
        }
      } else {
        // Back to list view
        splitView.classList.remove('has-selection');
        contentArea.classList.remove('is-active');
        contentArea.innerHTML = '';
        listItems.forEach(i => i.classList.remove('is-active'));
        currentSlug = null;
      }
    });

    // Check if we're loading a detail page directly
    const path = window.location.pathname;
    const match = path.match(new RegExp(`^/${section}/([^/]+)/?$`));
    if (match) {
      const slug = match[1];
      const item = splitView.querySelector(`[data-slug="${slug}"]`);
      if (item) {
        (item as HTMLElement).click();
      }
    }
  });
</script>
