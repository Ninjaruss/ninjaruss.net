---
interface Props {
  status: 'completed' | 'ongoing' | 'unresolved';
  size?: 'sm' | 'md';
}

const { status, size = 'sm' } = Astro.props;

const statusLabels = {
  completed: 'Completed',
  ongoing: 'Ongoing',
  unresolved: 'Unresolved',
};
---

<span class:list={['status-badge', `status-badge--${status}`, `status-badge--${size}`]}>
  {statusLabels[status]}
</span>
