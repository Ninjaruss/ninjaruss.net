---
import StatusBadge from './StatusBadge.astro';

interface Props {
  href: string;
  slug: string;
  title: string;
  subtitle?: string;
  status?: 'confident' | 'conflicted' | 'unresolved';
  meta?: string;
}

const { href, slug, title, subtitle, status, meta } = Astro.props;
---

<a href={href} class="list-item" data-slug={slug} role="listitem">
  <div class="list-item__content">
    <span class="list-item__title">{title}</span>
    {subtitle && <span class="list-item__subtitle">{subtitle}</span>}
  </div>
  <div class="list-item__meta">
    {status && <StatusBadge status={status} size="sm" />}
    {meta && <span class="list-item__meta-text">{meta}</span>}
  </div>
  <span class="list-item__arrow">â†’</span>
</a>

<style>
  .list-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    border-bottom: var(--border-hairline) solid var(--color-border);
    cursor: pointer;
    transition:
      background-color var(--transition-fast),
      transform var(--transition-fast);
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .list-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-gold);
    transform: scaleY(0);
    transition: transform var(--transition-fast);
  }

  .list-item:hover {
    background: rgba(255, 229, 44, var(--opacity-subtle));
  }

  .list-item:hover::before {
    transform: scaleY(1);
  }

  .list-item.is-active {
    background: var(--color-gold);
  }

  .list-item.is-active::before {
    transform: scaleY(1);
    background: var(--color-black);
  }

  .list-item.is-active .list-item__title {
    font-weight: 600;
    color: var(--color-black);
  }

  .list-item.is-active .list-item__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .list-item__content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .list-item__title {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
    transition: color var(--transition-fast);
  }

  .list-item__subtitle {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .list-item__meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  .list-item__meta-text {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-family: var(--font-display);
  }

  .list-item__arrow {
    font-size: var(--text-lg);
    color: var(--color-gold);
    opacity: 0;
    transform: translateX(-8px);
    transition:
      opacity var(--transition-fast),
      transform var(--transition-fast);
  }

  .list-item.is-active .list-item__subtitle {
    color: var(--color-black);
    opacity: 0.7;
  }

  .list-item:hover .list-item__arrow {
    opacity: 0.5;
    transform: translateX(0);
  }

  /* Animation stagger for list items - uses consistent 50ms stagger */
  .list-item {
    animation: p3r-entrance var(--animation-fast) var(--animation-easing) backwards;
  }

  .list-item:nth-child(1) { animation-delay: 0ms; }
  .list-item:nth-child(2) { animation-delay: 50ms; }
  .list-item:nth-child(3) { animation-delay: 100ms; }
  .list-item:nth-child(4) { animation-delay: 150ms; }
  .list-item:nth-child(5) { animation-delay: 200ms; }
  .list-item:nth-child(6) { animation-delay: 250ms; }
  .list-item:nth-child(7) { animation-delay: 300ms; }
  .list-item:nth-child(8) { animation-delay: 350ms; }
  .list-item:nth-child(n+9) { animation-delay: 400ms; }

  @media (prefers-reduced-motion: reduce) {
    .list-item {
      animation: none;
    }
  }
</style>
