---
interface Props {
  href: string;
  slug: string;
  title: string;
  subtitle?: string;
  meta?: string;
  tags?: string[];
  searchableContent?: string;
  contentType?: string;
  hasMinimalContent?: boolean;
}

const { href, slug, title, subtitle, meta, tags = [], searchableContent, contentType, hasMinimalContent = false } = Astro.props;
---

<a
  href={href}
  class="list-item"
  data-slug={slug}
  data-tags={tags.join(',')}
  data-search-content={searchableContent}
  data-content-type={contentType}
  role="listitem"
>
  <div class="list-item__content">
    <div class="list-item__title-row">
      <span class="list-item__title">{title}</span>
      {contentType && (
        <span class="list-item__type">{contentType.charAt(0).toUpperCase() + contentType.slice(1)}</span>
      )}
    </div>
    {subtitle && <span class="list-item__subtitle">{subtitle}</span>}
  </div>
  <div class="list-item__meta">
    {hasMinimalContent && (
      <span class="list-item__indicator" title="Minimal content" aria-label="Entry has minimal or no written content">
        ◆
      </span>
    )}
    {meta && <span class="list-item__meta-text">{meta}</span>}
  </div>
  <span class="list-item__arrow">→</span>
</a>

<style>
  .list-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    border-bottom: var(--border-hairline) solid var(--color-border);
    cursor: pointer;
    transition:
      background-color var(--transition-fast),
      transform var(--transition-fast),
      box-shadow var(--transition-fast);
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .list-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-gold);
    transform: scaleY(0);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .list-item:hover {
    background: linear-gradient(90deg, rgba(255, 229, 44, 0.15) 0%, rgba(255, 229, 44, 0.08) 100%);
    transform: translateX(4px) scale(1.005);
    box-shadow:
      inset 4px 0 0 var(--color-gold),
      0 0 15px rgba(255, 229, 44, 0.1);
  }

  .list-item:hover::before {
    transform: scaleY(1);
    box-shadow: 0 0 10px var(--color-gold);
  }

  .list-item:hover .list-item__title {
    color: var(--color-gold);
  }

  @media (prefers-reduced-motion: reduce) {
    .list-item:hover {
      transform: translateX(2px);
      box-shadow: inset 4px 0 0 var(--color-gold);
    }
    .list-item:hover::before {
      box-shadow: none;
    }
  }

  .list-item.is-active {
    background: var(--color-gold);
  }

  .list-item.is-active::before {
    transform: scaleY(1);
    background: var(--color-black);
  }

  .list-item.is-active .list-item__title {
    font-weight: 600;
    color: var(--color-black);
  }

  .list-item.is-active .list-item__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .list-item__content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .list-item__title-row {
    display: flex;
    align-items: flex-start;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .list-item__title {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
    transition: color var(--transition-fast);
    flex: 1;
    min-width: 0;
  }

  .list-item__type {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2xs) var(--space-xs);
    background: var(--color-black);
    color: var(--color-gold);
    font-family: var(--font-display);
    font-size: var(--text-2xs);
    text-transform: capitalize;
    letter-spacing: var(--tracking-label);
    border-radius: var(--radius-xs);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .list-item.is-active .list-item__type {
    background: var(--color-gold-deep);
    color: var(--color-black);
  }

  .list-item__subtitle {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .list-item__meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
    margin-left: auto;
  }

  .list-item__meta-text {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-family: var(--font-display);
  }

  .list-item__indicator {
    font-size: var(--text-xs);
    color: var(--color-text-subtle);
    font-family: var(--font-display);
    opacity: 0.6;
    margin-right: var(--space-xs);
    transition: opacity var(--transition-fast), color var(--transition-fast);
  }

  .list-item:hover .list-item__indicator {
    opacity: 0.8;
    color: var(--color-gold-dim);
  }

  .list-item.is-active .list-item__indicator {
    color: var(--color-black);
    opacity: 0.5;
  }

  .list-item__arrow {
    font-size: var(--text-lg);
    color: var(--color-gold);
    opacity: 0;
    transform: translateX(-8px);
    transition:
      opacity var(--transition-fast),
      transform var(--transition-fast);
  }

  .list-item.is-active .list-item__subtitle {
    color: var(--color-black);
    opacity: 0.7;
  }

  .list-item:hover .list-item__arrow {
    opacity: 0.5;
    transform: translateX(0);
  }

  /* Animation stagger for list items - uses consistent 50ms stagger */
  .list-item {
    animation: p3r-entrance var(--animation-fast) var(--animation-easing) backwards;
  }

  .list-item:nth-child(1) { animation-delay: 0ms; }
  .list-item:nth-child(2) { animation-delay: 50ms; }
  .list-item:nth-child(3) { animation-delay: 100ms; }
  .list-item:nth-child(4) { animation-delay: 150ms; }
  .list-item:nth-child(5) { animation-delay: 200ms; }
  .list-item:nth-child(6) { animation-delay: 250ms; }
  .list-item:nth-child(7) { animation-delay: 300ms; }
  .list-item:nth-child(8) { animation-delay: 350ms; }
  .list-item:nth-child(n+9) { animation-delay: 400ms; }

  @media (prefers-reduced-motion: reduce) {
    .list-item {
      animation: none;
    }
  }
</style>
